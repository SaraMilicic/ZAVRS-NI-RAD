    <?php
    // Make a MySQL Connection
    // Construct our join query
    $query = "SELECT family.Position, food.Meal ".
     "FROM family, food ".
        "WHERE family.Position = food.Position";


        $query = "SELECT * FROM city join hotel
            ON city.postal_code = hotel.postal_code join room
            ON hotel.id = room.id_hotel join reservation
            ON room.id = reservation.id_room
            WHERE city.name = 'Zagreb'
            AND room.type = 'Dvokrevetna';";

    $query = "SELECT hotel.name"."FROM city,hotel,room,reservation"."WHERE city.postal_code = hotel.postal_code
    AND hotel.id = room.id_hotel AND room.id = reservation.id_room AND city.name = 'Zagreb' AND room.type='Dvokrevetna'";
         
    $result = mysql_query($query) or die(mysql_error());


    // Print out the contents of each row into a table 
    while($row = mysql_fetch_array($result)){
        echo $row['Position']. " - ". $row['Meal'];
        echo "<br />";
    }
    ?>

